//Unicycler048 on/off
params.unicycler048 = false

//Unicycler paths
params.unicycler050_path = 'path/to/unicycler050/file'
params.unicycler048_path = 'path/to/unicycler048/file'

//unicycler depth_filter
params.depth_filter = '0.25'

//Trimming on/off
params.trim = true

//Kleborate
params.kleborate = false

//Reads
params.reads_type1 = './*L001_R{1,2}_001.fastq.gz'
params.reads_type2 = './*_{1,2}.fastq.gz'

//terminate, ignore or finish
params.failure_action = 'ignore'

//rmlst and kmerfinder
params.rmlst = false
params.kmerfinder = false
params.tax = '~/Path/kmerfinder_db/bacteria/bacteria.tax'
params.ATG = '~/Path/kmerfinder_db/bacteria/bacteria.ATG'

//Removes the work directory after run
cleanup = false

params.threads = '20'

process {
    cpus = params.threads
    withName: TRIMMING { cpus = 4 }
    withName: ASSEMBLY { cpus = 8 }
}