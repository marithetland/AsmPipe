//Unicycler048 on/off
params.unicycler048 = false

//Unicycler paths
params.unicycler050_path = 'path/to/unicycler050'
params.unicycler048_path = 'path/to/unicycler048'
//d3 pilon path: /opt/anaconda/anaconda3/envs/unicycler048/share/pilon-1.24-0/pilon.jar
params.pilon_uni048_path = 'path/to/pilon'

//unicycler depth_filter
params.depth_filter = '0.25'

//Trimming on/off
params.trim = true

//Kleborate
params.kleborate = false

//Reads
params.reads_type1 = './*L001_R{1,2}_001.fastq.gz'
params.reads_type2 = './*_{1,2}.fastq.gz'

//terminate, ignore or finish
params.failure_action = 'ignore'

//rmlst and kmerfinder
params.rmlst = false
params.kmerfinder = false
params.tax = '~/Path/kmerfinder_db/bacteria/bacteria.tax'
params.ATG = '~/Path/kmerfinder_db/bacteria/bacteria.ATG'

//Removes the work directory after run
cleanup = false

params.threads = '20'

params.fast = false

if params.fast {
    params.maxForks = 6
}
else params.fast {
    params.maxForks = 3
}

